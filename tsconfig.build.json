{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "jsx": "react-jsx",
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
